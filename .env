# DiscussIt Environment Configuration - Server OH (51.15.115.36)
# This .env file is configured for our production server
# Last updated: 2024 (by Mistral Vibe)
# IMPORTANT: Change SECRET_KEY before production use!

# Environment (development, staging, production)
ENVIRONMENT=production

# Security
SECRET_KEY=your-very-secure-secret-key-change-this-immediately-in-production
DEBUG=False

# Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=51.15.115.36,localhost,OH,127.0.0.1
# Database Configuration
# For SQLite (development), leave DATABASE_URL empty
# For PostgreSQL, use: postgresql://user:password@host:port/database
DATABASE_URL=postgres://discussit_user:discussit_password_2024@localhost:5432/discussit

# PostgreSQL specific settings (if not using DATABASE_URL)
DB_NAME=discussit
DB_USER=discussit_user
DB_PASSWORD=discussit_password_2024
DB_HOST=localhost
DB_PORT=5432

# Frontend URLs (for CORS and redirects)
FRONTEND_URL=
DJANGO_SERVER_URL=
ANGULAR_APP_URL=
LOGIN_URL=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://51.15.115.36:8000,http://localhost:4200,http://127.0.0.1:4200

# CSRF Configuration
CSRF_TRUSTED_ORIGINS=http://51.15.115.36,http://localhost

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Social Authentication (optional)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# Cache Configuration (optional)
REDIS_URL=redis://localhost:6379/0
